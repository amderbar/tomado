{
    "name": "TomaDo Dev Container",
    "image": "mcr.microsoft.com/vscode/devcontainers/base:0-jammy",
    "features": {
        "ghcr.io/devcontainers-extra/features/haskell:2": {}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "haskell.plugin.semanticTokens.globalOn": true
            },
            "extensions": [
                "haskell.haskell",
                "dbcode.dbcode",
                "GitHub.copilot",
                "GitHub.copilot-chat"
            ]
        }
    }
}
